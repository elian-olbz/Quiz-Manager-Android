<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="horizontal" android:id="@+id/linear1" android:background="#2979ff" android:padding="8dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <ImageView android:id="@+id/imageview3" android:layout_width="26dp" android:layout_height="wrap_content" android:layout_marginLeft="8dp" android:layout_marginTop="10dp" android:src="@drawable/ic_arrow_back_white" android:scaleType="fitXY"/>
        <TextView android:textSize="20sp" android:textColor="#ffffff" android:id="@+id/textview1" android:padding="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="8dp" android:text="Quiz Configuration" android:lines="1" android:layout_weight="1"/>
        <ImageView android:layout_gravity="center_vertical" android:id="@+id/imageview10" android:padding="9dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ic_delete_white" android:scaleType="center"/>
    </LinearLayout>
    <ScrollView android:id="@+id/vscroll2" android:layout_width="match_parent" android:layout_height="500dp" android:layout_weight="1">
        <LinearLayout android:orientation="vertical" android:id="@+id/linear2" android:background="#f5f5f5" android:paddingBottom="9dp" android:layout_width="match_parent" android:layout_height="wrap_content">
            <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/linear4" android:background="#2196f3" android:layout_width="match_parent" android:layout_height="230dp" android:layout_marginLeft="12dp" android:layout_marginTop="12dp" android:layout_marginRight="12dp">
                <ImageView android:id="@+id/imageview1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ic_action_white_add_photo_5" android:scaleType="fitXY"/>
                <TextView android:textSize="16sp" android:textColor="#ffffff" android:layout_gravity="center_horizontal" android:id="@+id/add_img1" android:padding="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Add a cover photo"/>
            </LinearLayout>
            <LinearLayout android:orientation="vertical" android:id="@+id/lin_name" android:paddingLeft="9dp" android:paddingTop="15dp" android:paddingRight="6dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="12dp" android:layout_marginTop="9dp" android:layout_marginRight="12dp" android:layout_marginBottom="9dp">
                <LinearLayout android:gravity="center_horizontal" android:orientation="horizontal" android:id="@+id/linear16" android:paddingLeft="3dp" android:paddingRight="3dp" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <EditText android:textSize="14sp" android:textColor="#212121" android:textColorHint="#616161" android:id="@+id/name_" android:paddingLeft="9dp" android:paddingRight="8dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:lines="1" android:layout_weight="1"/>
                </LinearLayout>
                <LinearLayout android:orientation="horizontal" android:id="@+id/linear17" android:paddingLeft="3dp" android:paddingRight="3dp" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <EditText android:textSize="14sp" android:textColor="#212121" android:textColorHint="#616161" android:id="@+id/qname_" android:paddingLeft="9dp" android:paddingRight="8dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:lines="1" android:layout_weight="1"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout android:orientation="vertical" android:id="@+id/lin_des" android:paddingLeft="12dp" android:paddingTop="12dp" android:paddingRight="5dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="12dp" android:layout_marginRight="10dp" android:layout_marginBottom="9dp">
                <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/linear28" android:background="@android:color/transparent" android:paddingRight="3dp" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <EditText android:textSize="14sp" android:textColor="#212121" android:textColorHint="#616161" android:id="@+id/desc_" android:paddingLeft="5dp" android:paddingRight="12dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="3dp" android:layout_weight="1"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/lin_dura" android:layout_width="match_parent" android:layout_height="35dp" android:layout_marginLeft="12dp" android:layout_marginRight="12dp" android:layout_marginBottom="9dp">
                <TextView android:textSize="14sp" android:textColor="#212121" android:id="@+id/textview7" android:paddingLeft="6dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="8dp" android:text="Duration:"/>
                <TextView android:textSize="14sp" android:textStyle="bold" android:textColor="#212121" android:id="@+id/disp_duration" android:padding="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="6dp"/>
                <TextView android:textSize="14sp" android:textStyle="bold" android:textColor="#212121" android:id="@+id/min_unit" android:paddingTop="8dp" android:paddingRight="8dp" android:paddingBottom="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="min."/>
                <LinearLayout android:gravity="right|center_vertical|center_horizontal|center" android:orientation="horizontal" android:id="@+id/linear22" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <ImageView android:id="@+id/edit_duration" android:paddingLeft="15dp" android:paddingTop="8dp" android:paddingBottom="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="11dp" android:src="@drawable/ic_create_white" android:scaleType="center"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/lin_items" android:layout_width="match_parent" android:layout_height="35dp" android:layout_marginLeft="12dp" android:layout_marginRight="12dp" android:layout_marginBottom="9dp">
                <TextView android:textSize="14sp" android:textColor="#212121" android:id="@+id/textview8" android:paddingLeft="6dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="8dp" android:text="Number of items:"/>
                <TextView android:textSize="14sp" android:textStyle="bold" android:textColor="#212121" android:id="@+id/disp_items" android:padding="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="6dp"/>
                <LinearLayout android:gravity="right|center_vertical|center_horizontal|center" android:orientation="horizontal" android:id="@+id/linear23" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <ImageView android:id="@+id/edit_items" android:paddingLeft="15dp" android:paddingTop="8dp" android:paddingBottom="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="11dp" android:src="@drawable/ic_create_white" android:scaleType="center"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout android:orientation="vertical" android:id="@+id/linear26" android:paddingLeft="6dp" android:paddingTop="6dp" android:paddingRight="9dp" android:paddingBottom="4dp" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginLeft="12dp" android:layout_marginRight="12dp" android:layout_marginBottom="9dp">
                <LinearLayout android:orientation="horizontal" android:id="@+id/linear24" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <CheckBox android:textSize="14sp" android:textColor="#212121" android:gravity="center_vertical" android:id="@+id/lock" android:paddingLeft="4dp" android:paddingTop="8dp" android:paddingRight="8dp" android:paddingBottom="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Lock answer sheet after sumbission"/>
                </LinearLayout>
                <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/linear25" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <LinearLayout android:orientation="horizontal" android:id="@+id/linear29" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="7dp" android:layout_weight="1">
                        <EditText android:textSize="14sp" android:textColor="#212121" android:textColorHint="#607d8b" android:layout_gravity="center_vertical" android:id="@+id/pass" android:paddingLeft="6dp" android:paddingRight="12dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="6dp" android:lines="1" android:inputType="textPassword"/>
                    </LinearLayout>
                    <ImageView android:layout_gravity="center_vertical" android:id="@+id/imageview11" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ic_visibility_off_grey" android:scaleType="center"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <LinearLayout android:gravity="center" android:orientation="horizontal" android:id="@+id/linear19" android:background="#2979ff" android:padding="6dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textSize="16sp" android:textColor="#ffffff" android:id="@+id/textview9" android:padding="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Create Questions"/>
        <ImageView android:id="@+id/imageview9" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ic_chevron_right_white" android:scaleType="center"/>
    </LinearLayout>
</LinearLayout>
